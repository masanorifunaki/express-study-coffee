doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    link(href="/css/app.css" rel="stylesheet" type="text/css")
  body
    include header.pug
    section#main
      h1 メッセージを保存
      form(action="update" method="POST" enctype="multipart/form-data")
        input(type="hidden" name="_csrf" value=csrf)
        textarea(placeholder="メッセージ" name="message")#textarea-message
        input(type="file" name="image")#input-file
        button(type="submit")#submit-button 送信