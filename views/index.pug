doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    link(href="/css/app.css" rel="stylesheet" type="text/css")
  body
    include header.pug
    section#main
      h1#title 投稿一覧
      each msg in messages
        .msg
          .msg_meta
            h2.msg_username #{msg.username}
            time.msg_data #{moment(msg.date).format('YYYY-MM-DD HH:mm:ss')}
            .msg_main
              p.msg_body #{msg.message}
            img(src=msg.avatar_path).msg_avatar
            if msg.image_path
              img(src=msg.image_path).msg_image